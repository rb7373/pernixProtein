

//variables
$mainColorMenuDark = #222
$mainColorMenuLight = white
$subMenuHover = #9E9E9E
$subMenuMenuLight = white


.menu {
  margin: 0 auto;
  padding: 0;
  position absolute
  z-index 100
}

.titleMenu{
  font-size 16px
  margin-left: 20px;
}

.footerTitleMenu{
  font-size 14px
  margin-left: 20px;
  font-weight: bold;
}

.footerSubTitleMenu{
  font-size 12px
  margin-left: 20px;
}

.subTitleMenu{
  font-size 14px
  margin-left: 50px;
}

.subTitleItemMenu{
  font-size 12px
  margin-left: 68px;
}

.menu li {
  list-style: none;
}

.menu li span {
  vertical-align: top;
  text-decoration: none;
  text-align: center;
}

.menu li a {
  display: table;
  margin-top: 1px;
  padding: 14px 10px;
  width: 100%;
  background: $mainColorMenuDark;
  text-decoration: none;
  text-align: left;
  vertical-align: top;
  color: #fff;
  overflow: hidden;
  -webkit-transition-property: background;
  -webkit-transition-duration: 0.4s;
  -webkit-transition-timing-function: ease-out;
  transition-property: background;
  transition-duration: 0.4s;
  transition-timing-function: ease-out;
}

.menu > li:first-child a {
  background-color: $mainColorMenuLight;
  margin-top: 0;
  color: #000;
  border: solid 1px;
  margin-bottom: -1px;
  padding: 10px 10px 5px;
}

.menu > li:last-child a {
  background-color: $mainColorMenuLight;
  margin-top: 0;
  color: black;
  border: solid 1px;
}

.menu li ul {
  margin: 0;
  padding: 0;
}

.menu li li a {
  display: block;
  margin-top: -1px;
  border-bottom solid 1px
  border-left solid 1px
  border-right solid 1px
  padding: 0 10px;
  height: 0;
  background: $subMenuMenuLight;
  color: #222;
  -webkit-transition-property: all;
  -webkit-transition-duration: 0.5s;
  -webkit-transition-timing-function: ease-out;
  transition-property: all;
  transition-duration: 0.5s;
  transition-timing-function: ease-out;
}

.menu li li:last-child a {
  border-bottom solid 0px
}



.menu > li:hover li a {
  display: table;
  margin-top: 1px;
  padding: 10px;
  width: 100%;
  height: 1em;
  -webkit-transition-property: all;
  -webkit-transition-duration: 0.3s;
  -webkit-transition-timing-function: ease-out;
  transition-property: all;
  transition-duration: 0.3s;
  transition-timing-function: ease-out;
}

.subMenu a:hover {
  background: $subMenuHover;
  -webkit-transition-property: background;
  -webkit-transition-duration: 0.2s;
  -webkit-transition-timing-function: ease-out;
  transition-property: background;
  transition-duration: 0.2s;
  transition-timing-function: ease-out;
}

//Animations top main

/* when hiding the picture */
.fadeMenu.ng-hide-add {
  animation: 0.5s fadeOut ease;
}

/* when showing the picture */
.fadeMenu.ng-hide-remove {
  animation: 0.5s fadeIn ease;
}
