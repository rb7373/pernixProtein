.container
  .navbar.navbar-inverse.navbar-fixed-bottom
    div(layout="row")
      div(flex="")
        a.btn.navbar-btn.pn-footer-button(ng-show='!!navigation.getPreviousTitle()',
        ng-click = 'navigation.goPrevious()')
          span.glyphicon.glyphicon-triangle-left(aria-hidden='true')
          | &nbsp {{navigation.getPreviousTitle()}}
      div(flex="", hide-sm="", layout = "row", layout-align="center center")
        a.btn.navbar-btn.pn-footer-button.footerCenterTitle()
          |  {{navigation.getCurrentTitle()}}
      div(flex="", layout="row", layout-align="end center")
        a.btn.navbar-btn.pn-footer-button(ng-show='!!navigation.getNextTitle()',
        ng-click = 'navigation.goNext()')
          | {{navigation.getNextTitle()}} &nbsp;
          span.glyphicon.glyphicon-triangle-right(aria-hidden='true')
    div(layout="row")
      div(flex="", hide-gt-sm="", layout = "row", layout-align="center center")
        a.btn.navbar-btn.pn-footer-button.footerCenterTitle()
          |  {{navigation.getCurrentTitle()}}



